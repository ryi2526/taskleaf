<h1>サインアップ</h1>

<!-- postメソッドを使用するフォームを作成する -->
<form action="/local/users" method="post">
    <!-- ユーザIDの入力欄 -->
    <label for="userid">
        ユーザID
    </label>
    <input class="form-control" id="user_id" type="text" name="user[UserID]">
    <!-- ユーザ名の入力欄 -->
    <label for="username">
        ユーザ名
    </label>
    <input class="form-control" id="user_name" type="text" name="user[UserName]">
    <!-- ユーザパスワードの入力欄 -->
    <label for="password">
        パスワード
    </label>
    <input class="form-control" id="user_password" type="text" name="user[password]">
    <!-- ユーザパスワード確認の入力欄 -->
    <label for="passwordconfirmation">
        パスワード確認
    </label>
    <input class="form-control" id="user_password_confirmation" type="text" name="user[password_confirmation]">

    <input type="submit" name="commit" value="登録する" class="createbtn" data-disable-with="登録する">
</form>
